{
  "version": 2,
  "name": "toast-talent",
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/api/(.*)$", "dest": "https://api.toasttalent.co.za/api/$1" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}
